<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC 
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="gz" extends="struts-default" namespace="/gz">
		
		<interceptors>
			
			<interceptor name="loginInterceptor" class="org.tingoo.gaapi.action.interceptor.LoginInterceptor"></interceptor>
			<interceptor-stack name="loginDefaultStack">
				<interceptor-ref name="loginInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
			
			<interceptor name="adminInterceptor" class="org.tingoo.gaapi.action.interceptor.AdminInterceptor"></interceptor>
			<interceptor-stack name="adminDefaultStack">
				<interceptor-ref name="loginInterceptor"></interceptor-ref>
				<interceptor-ref name="adminInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
			
		</interceptors>
		<!-- default-interceptor-ref name="storeStack"></default-interceptor-ref-->
		
		<default-action-ref name="index"></default-action-ref>
		
		<global-results>
			<result name="login">index.jsp</result>
		</global-results>
		
		<action name="login" class="org.tingoo.gaapi.action.LoginAction" >
			<result type="redirect">search</result>
		</action>
		
		<action name="index">
			<result>index.jsp</result>
		</action>
		
		<action name="import" class="org.tingoo.gaapi.action.ImportAction">
			<result>import.jsp</result>
			<interceptor-ref name="adminDefaultStack"></interceptor-ref>
		</action>
		<action name="dealimport" class="org.tingoo.gaapi.action.ImportAction" method="dealimport">
			<result>importok.jsp</result>
			<interceptor-ref name="adminDefaultStack"></interceptor-ref>
		</action>
		<action name="search" class="org.tingoo.gaapi.action.SearchAction">
			<result>search.jsp</result>
			<interceptor-ref name="loginDefaultStack"></interceptor-ref>
		</action>
	</package>
</struts>
